<!DOCTYPE html>
<html>
<head>
  <title>Invests In - Investor </title>
  <%- include('./partials/css.ejs') %>
</head>
<body>
  <div class="container">
    <nav></nav>
    <main>
      <h1>Startups Invested In</h1>
      <ul>
        <% investments.forEach(function(startup) { %>
          <li><%= startup.name %> - Invested</li>
          <form action="/investor/deleteInvestment/<%= id %>" method="POST">
            <input type="hidden" name="startupID" value="<%= startup.startup_id %>">
          <button
            type="submit"
            class="btn btn-outline-danger btn-sm"
            >Delete</button
          >
          
          </form>
        <% }); %>
      </ul>

      <h1>Invest in a New Startup</h1>
      <form action="/investor/addInvestment/<%= id %>" method="POST">
        <% allStartups.forEach(function(startup) { %>
          <label>
            <input
              type="radio"
              name="startupID"
              value="<%= startup._id %>"
            />
            <%= startup.startupDetails.name %>
          </label><br>
        <% }); %>
        <button type="submit">Invest</button>
      </form>

      
    </main>
  </div>
</body>
</html>